<xml>
  <div id="toolboxGeneric" style="display: none">
    
    <category name="Briques de base" colour="250">
      <block type="compute"></block>
      <block type="execute"></block>
      <block type="switch"></block>
      <block type="case"></block>
      <block type="default"></block>
      <block type="check_frame_length"></block>
      <block type="custom_controls_if"></block>
    </category>


    <category name="Blocks de décodage" colour="270">
      <block type="decodebytes"></block>
      <block type="decodeboolean"></block>
      <block type="decodesignedinteger"></block>
      <block type="decodeunsignedinteger"></block>      
    </category>

    <sep gap="8"></sep>

    <category name="Mes fonctions" id="NewCategory" colour="180">
      <!-- It's gonna be filled the same maneer as function and variables -->
    </category>

    <category name="Recherche" id="SearchCategory" colour="200">
      <!-- It's gonna be filled by the functions in the good tag -->
    </category>
  
  </div>

  <div id="toolboxFunction" style="display: none">
    <category name="Blocks numériques" colour="60">
      <block type="math_number"></block>
    </category>
    <sep gap="8"></sep>

    <category name="Configuration" id="config-category" colour="180">
      <!-- It's gonna be filled with config variables -->
    </category>

    <sep gap="8"></sep>

    <category name="Fonctions" custom="PROCEDURE" colour="80"></category>
    <category name="Variables" custom="VARIABLE" colour="100"></category>

    <category name="Briques de base" colour="250">
      <block type="decodebytes"></block>
      <block type="decodeunsignedinteger"></block>
      <block type="decodesignedinteger"></block>
      <block type="compute"></block>
      <block type="execute"></block>
      <block type="switch"></block>
      <block type="case"></block>
      <block type="default"></block>
      <block type="controls_if"></block>
    </category>


  </div>
</xml>